#
# Status Bar:
bar {
    swaybar_command waybar
}

#
# Lock screen
bindsym Mod4+Ctrl+l exec swaylock -c 000000

#
# Set random wallpaper on startup
exec ~/.cargo/bin/setwall random ~/Pictures/walls -c sway -o $laptop -o HDMI-A-1 -k

#
# Screenshot tool
bindsym Ctrl+Alt+A exec flameshot gui

include /etc/sway/config.d/*

#
# Remove borders from all windows
default_border none
exec swaymsg border none
